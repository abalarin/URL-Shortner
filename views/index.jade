extends layout

block content
  
  form(name="tinyURL" method="post" align="center" class="center")
    h2(align="center") generate tiny url
    div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
      label(class="mdl-textfield__label" for="URL") Url...
      input(class="mdl-textfield__input" type="text" name='URL')
    div
      button(type="submit" class="mdl-button mdl-js-button mdl-button--raised") Shorten
  

    div(align="center")
    p(class="url") tiny url: 
    a(href="#{URL}") #{URL}  